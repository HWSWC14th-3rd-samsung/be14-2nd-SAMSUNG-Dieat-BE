<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.samsung.dieat.open_data_food.query.dao.OpenDataFoodMapper">

    <resultMap id="OpenDataFoodMap" type="com.samsung.dieat.open_data_food.query.dto.ResponseOpenDataFood">
        <id property="code" column="odf_code"/>
        <result property="name" column="odf_name"/>
        <result property="calories" column="odf_calories"/>
        <result property="carbs" column="odf_carbs"/>
        <result property="sugar" column="odf_sugar"/>
        <result property="protein" column="odf_protein"/>
        <result property="fat" column="odf_fat"/>
        <result property="updateDate" column="odf_update_dt"/>
    </resultMap>

    <select id="findAll" resultMap="OpenDataFoodMap">
        SELECT * FROM tbl_open_data_food ORDER BY odf_code DESC
    </select>

    <select id="findByCode" resultMap="OpenDataFoodMap">
        SELECT * FROM tbl_open_data_food WHERE odf_code = #{code}
    </select>
</mapper>